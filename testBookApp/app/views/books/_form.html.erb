<%= form_with(model: book, local: true) do |form| %>
  <% if book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
      <% book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :published_date %>
    <%= form.date_select :published_date %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div class="field">
    <%= form.label :author_id, "Author" %>
    <% options = options_from_collection_for_select(@authors, 'id', 'name', book.author_id.to_i) %>
    <%= form.select :author_id, options, {} %>
  </div>

  <div class="field">
    <%= form.label :page_number %>
    <%= form.number_field :page_number %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
